{
  "manifest_version": 2,
  "name": "Bunken",
  "version": "1.0.1",

  "description": "A firefox extension to download ebooks directly from Goodreads.",

  "icons": {
    "48": "./icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.goodreads.com/book/show/*"],
      "js": ["support/goodreads/script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["*://goodreads.com/*", "*://api.bunken.tk/*", "tabs"]
}
